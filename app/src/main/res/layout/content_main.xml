<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-black"
            android:text="Recent sessions"
            android:textSize="22sp"
            android:textColor="@color/cardview_dark_background"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="32dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-light"
            android:text="Get back to previous inspections"
            android:textSize="18sp"
            android:textColor="#3A3A3A"
            tools:layout_editor_absoluteX="-1dp"
            tools:layout_editor_absoluteY="64dp" />

        <androidx.cardview.widget.CardView
            android:layout_marginTop="32dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:padding="32dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="10dp"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="135dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="BOEING-737"
                android:textFontWeight="600"
                android:textSize="20dp"
                android:paddingTop="24dp"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="230dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/airplane1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:paddingTop="5dp"
                android:text="20 September 2019"
                android:layout_gravity="center_horizontal"/>
            <androidx.cardview.widget.CardView
                android:outlineAmbientShadowColor="@color/cardview_dark_background"
                app:cardBackgroundColor="#FF473A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                android:padding="0dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:paddingLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_menu_camera"/>
                    <TextView
                        android:padding="5dp"
                        android:paddingRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=": 25"
                        android:textSize="16dp"
                        android:textColor="@color/cardview_light_background"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_marginTop="16dp"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:padding="32dp"
            app:cardBackgroundColor="@color/cardview_light_background"
            app:cardCornerRadius="10dp"
            tools:layout_editor_absoluteX="32dp"
            tools:layout_editor_absoluteY="135dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="monospace"
                android:text="AIRBUS-20"
                android:textFontWeight="600"
                android:textSize="20dp"
                android:paddingTop="24dp"
                android:layout_gravity="center_horizontal"/>

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:src="@drawable/airplane2"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:paddingTop="5dp"
                android:text="11 November 2019"
                android:layout_gravity="center_horizontal"/>
            <androidx.cardview.widget.CardView
                android:outlineAmbientShadowColor="@color/cardview_dark_background"
                app:cardBackgroundColor="#FF473A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:cardCornerRadius="10dp"
                android:layout_margin="10dp"
                android:padding="0dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:paddingLeft="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@android:drawable/ic_menu_camera"/>
                    <TextView
                        android:padding="5dp"
                        android:paddingRight="5dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=": 34"
                        android:textSize="16dp"
                        android:textColor="@color/cardview_light_background"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>


        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>